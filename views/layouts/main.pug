doctype html
include ../mixin/footerAssetsManifest
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		title=title
		each style in ['index']
			each link in assetsManifest[style].css
				link(rel="stylesheet", href='/assets' + link)
	body
		block content
		footer
		+footerAssetsManifest(['index'])