{
	"compilerOptions": {
		"target": "esnext",
		"locale": "ru",
		"sourceMap": true,
		"moduleResolution": "node",
		"module": "esnext",
		"strict": true,
		"newLine": "lf",
		"jsx": "preserve",
		"importHelpers": true,
		"lib": ["dom", "es5", "es2015.promise", "ESNext"],
		"rootDir": "./",
		"baseUrl": "./",
		"paths": {
			"~/*": ["*"],
			"~libs/*": ["libs/*"],
			"~type/*": ["type/*"],
			"~interface/*": ["interface/*"],
			"@style/*": ["./style/*"]
		}
	},
	"include": ["**/*.ts"],
	"exclude": ["**/*.test.ts"]
}
