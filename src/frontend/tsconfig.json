{
	"compilerOptions": {
		"target": "esnext",
		"locale": "ru",
		"sourceMap": true,
		"moduleResolution": "node",
		"module": "esnext",
		"strict": true,
		"newLine": "lf",
		"jsx": "preserve",
		"importHelpers": true,
		"lib": ["dom", "es5", "es2015.promise", "ESNext"],
		"rootDir": "./",
		"baseUrl": "./",
		"paths": {
			"@/*": ["/*"],
			"@js/*": ["./js/*"],
			"@libs/*": ["./js/libs/*"],
			"@type/*": ["./js/type"],
			"@interface/*": ["./js/interface/*"],
			"@style/*": ["./style/*"],
			"@fonts/*": ["./fonts/*"],
			"@images/*": ["./images/*"],
			"@components/*": ["./js/components/*"],
			"@pages/*": ["./js/pages/*"],
			"@layout/*": ["./js/layout/*"]
		}
	},
	"include": ["**/*.ts"],
	"exclude": ["**/*.test.ts"]
}
